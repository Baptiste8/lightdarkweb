package testwindowbuilder;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JLabel;
import javax.swing.JTextField;
import javax.swing.JTextArea;

public class AjoutObjetEnVente extends JDialog {

	private final JPanel contentPanel = new JPanel();
	private JTextField textField;
	private JTextField textField_1;
	private JTextField textField_2;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		try {
			AjoutObjetEnVente dialog = new AjoutObjetEnVente();
			dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
			dialog.setVisible(true);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Create the dialog.
	 */
	public AjoutObjetEnVente() {
		setBounds(100, 100, 450, 300);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		contentPanel.setLayout(null);
		{
			JLabel lblNewLabel = new JLabel("Titre :");
			lblNewLabel.setBounds(10, 11, 29, 14);
			contentPanel.add(lblNewLabel);
		}
		{
			textField = new JTextField();
			textField.setBounds(55, 8, 199, 20);
			contentPanel.add(textField);
			textField.setColumns(10);
		}
		{
			JLabel label = new JLabel("Prix :");
			label.setBounds(293, 11, 46, 14);
			contentPanel.add(label);
		}
		{
			textField_1 = new JTextField();
			textField_1.setBounds(326, 8, 38, 20);
			contentPanel.add(textField_1);
			textField_1.setColumns(10);
		}
		{
			JLabel label = new JLabel("\u20AC");
			label.setBounds(368, 11, 46, 14);
			contentPanel.add(label);
		}
		{
			textField_2 = new JTextField("E:\\");
			textField_2.setBounds(55, 40, 129, 20);
			contentPanel.add(textField_2);
			textField_2.setColumns(10);
		}
		{
			JLabel lblImages = new JLabel("Images :");
			lblImages.setBounds(10, 42, 46, 14);
			contentPanel.add(lblImages);
		}
		{
			JButton button = new JButton("...");
			button.setBounds(187, 40, 22, 20);
			contentPanel.add(button);
		}
		{
			JLabel lblDescription = new JLabel("Description :");
			lblDescription.setBounds(10, 74, 60, 14);
			contentPanel.add(lblDescription);
		}
		{
			JTextArea textArea = new JTextArea();
			textArea.setBounds(10, 91, 404, 126);
			contentPanel.add(textArea);
		}
		{
			JPanel buttonPane = new JPanel();
			buttonPane.setLayout(new FlowLayout(FlowLayout.RIGHT));
			getContentPane().add(buttonPane, BorderLayout.SOUTH);
			{
				JButton okButton = new JButton("PUBLIER");
				okButton.setActionCommand("OK");
				buttonPane.add(okButton);
				getRootPane().setDefaultButton(okButton);
			}
			{
				JButton cancelButton = new JButton("ANNULER");
				cancelButton.setActionCommand("Cancel");
				buttonPane.add(cancelButton);
			}
		}
	}

}
